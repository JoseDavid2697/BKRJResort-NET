@{
    Layout = "_Layout";
}

<!-- ======= Header ======= -->
<header id="header">
    <div class="container d-flex">

        <div class="logo mr-auto">
            <h1 class="text-light"><a asp-controller="Home" asp-action="Index">BKRJ Resort</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
        </div>

        <nav class="nav-menu d-none d-lg-block">
            <ul>
                <li class="active"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li><a asp-controller="Admin" asp-action="listadoReservaciones">Listado de reservaciones</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        GESTIONAR HABITACIONES
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu" style="text-align: center">
                        <a class="dropdown-item" asp-controller="Admin" asp-action="verificarEstadoHabitaciones">Habitaciones</a>
                        <a class="dropdown-item" asp-controller="Admin" asp-action="ConsultarHabitacion">Disponibilidad de habitacion</a>
                        <a class="dropdown-item" asp-controller="Admin" asp-action="AdministrarHabitaciones">Administrar habitaciones</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        GESTIONAR
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu" style="text-align: center">
                        <a class="dropdown-item" asp-controller="Admin" asp-action="Temporadas">Temporadas</a>
                        <a class="dropdown-item" asp-controller="Admin" asp-action="OfertasAdmin">Ofertas</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        VISTAS
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu" style="text-align: center">
                        <a class="dropdown-item" asp-controller="Admin" asp-action="Home">Home</a>
                        <a class="dropdown-item" asp-controller="Admin" asp-action="SobreNosotros">Sobre Nosotros</a>
                        <a class="dropdown-item" asp-controller="Admin" asp-action="Facilidades">Facilidades</a>
                        <a class="dropdown-item" asp-controller="Admin" asp-action="ComoLlegar">Como Llegar</a>

                    </div>
                </li>
                <li><a asp-controller="Home" asp-action="Index">Cerrar Sesión</a></li>
            </ul>
        </nav><!-- .nav-menu -->

    </div>
</header><!-- End Header -->

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Services</h2>
                <ol>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>Facilidades</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
        <div class="container">

            <div class="section-title" data-aos="fade-up">
                <h2>Ofrecemos <strong>excelentes servicios</strong></h2>
            </div>

            <div class="content d-flex flex-column justify-content-center">
                <form asp-controller="Admin" asp-action="ActualizarFacilidades" enctype="multipart/form-data">
                    <div class="row ">
                        <div class="col-lg-4 col-md-6">
                            <div class="icon-box" data-aos="fade-up">
                                <div class="icon"><i class="icofont-computer"></i></div>
                                <h4 class="title"><a href="">Equipo</a></h4>
                                <textarea required rows="4" cols="35" name="equipo" id="equipo" style="resize:none">@Model.equipo</textarea>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="icon-box" data-aos="fade-up" data-aos-delay="100">
                                <div class="icon"><i class="icofont-chart-bar-graph"></i></div>
                                <h4 class="title"><a href="">Precios</a></h4>
                                <textarea required rows="4" cols="35" name="precios" id="precios" style="resize:none">@Model.precios</textarea>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="icon-box" data-aos="fade-up" data-aos-delay="200">
                                <div class="icon"><i class="icofont-earth"></i></div>
                                <h4 class="title"><a href="">Internet</a></h4>
                                <textarea required rows="4" cols="35" name="internet" id="internet" style="resize:none">@Model.internet</textarea>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="icon-box" data-aos="fade-up" data-aos-delay="200">
                                <div class="icon"><i class="icofont-image"></i></div>
                                <h4 class="title"><a href="">Mirador</a></h4>
                                <textarea required rows="4" cols="35" name="mirador" id="mirador" style="resize:none">@Model.mirador</textarea>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="icon-box" data-aos="fade-up" data-aos-delay="300">
                                <div class="icon"><i class="icofont-settings"></i></div>
                                <h4 class="title"><a href="">Seguridad</a></h4>
                                <textarea required rows="4" cols="35" name="seguridad" id="seguridad" style="resize:none">@Model.seguridad</textarea>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="icon-box" data-aos="fade-up" data-aos-delay="400">
                                <div class="icon"><i class="icofont-tasks-alt"></i></div>
                                <h4 class="title"><a href="">Calendarios</a></h4>
                                <textarea required rows="4" cols="35" name="calendarios" id="calendarios" style="resize:none">@Model.calendarios</textarea>
                            </div>
                        </div>
                    </div>
                    <center>
                        <button type="submit" class="btn btn-success">Actualizar</button>
                    </center>
                </form>
            </div>
        </div>
    </section><!-- End Services Section -->
    

</main><!-- End #main -->